{
  "permissions": {
    "allow": [
      "Bash(git config:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Skill(canvas-design)",
      "Skill(doc-coauthoring)",
      "Skill(frontend-design)",
      "Skill(pdf)",
      "Skill(pptx)"
    ]
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "say \"권한 수정해라\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"야 일할 시간이야\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "say \"야 이거 좀 확인해봐\""
          }
        ]
      }
    ]
  }
}
